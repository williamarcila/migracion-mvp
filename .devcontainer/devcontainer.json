{
  "name": "PHP 8.2",
  "image": "mcr.microsoft.com/devcontainers/php:1-8.2-apache",
  "features": {
    "ghcr.io/devcontainers/features/composer:1": {}
  },
  "postCreateCommand": "sudo a2enmod rewrite && sudo service apache2 restart",
  "customizations": {
    "vscode": {
      "extensions": [
        "bmewburn.vscode-intelephense-client",
        "xdebug.php-debug"
      ]
    }
  },
  "forwardPorts": [8000],
  "remoteUser": "vscode"
}
